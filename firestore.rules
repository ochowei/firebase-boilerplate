rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow document creation if the user is authenticated and the userId matches their own UID.
      // This is for client-side profile creation/update, though our primary method is the Cloud Function.
      allow create: if request.auth != null && request.auth.uid == userId;

      // A user can only read or update their own profile data.
      allow read, update: if request.auth != null && request.auth.uid == userId;

      // Deny deletion of user profiles from the client-side for security.
      allow delete: if false;
    }
  }
}
